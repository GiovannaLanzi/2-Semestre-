#include <stdio.h>
#include <locale.h>
//Giovanna Lanzi Lopes Torres 

int somat(int n); 

int main(){
	setlocale(LC_ALL, "Portuguese");
	int numero=0;
	
	printf("Digite um n√∫mero: ");
	scanf("%d", &numero);
	
	printf("Soma = %d", somatorio(numero));
	
	return 0;
}

int somatorio(int n){
	int soma = 0, i;
	for(i=1; i<=n; i++){
		soma = soma + (5 * i * i + 2 * i + 8);
	}
	//printf("Soma = %d", soma(n));
	return soma;
}
